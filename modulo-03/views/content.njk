{% extends "layout.njk" %}

{% block content %}
    <header>
        <div class="conteudos">
            <a href="/" id="titulo"><strong>PÃ¡gina Inicial</strong></a>
        </div>
    </header>
    <section class="cards">
        
        {% for item in items %}

        <div class="card {{ 'featured-wrapper' if item.isfeatured }}" id="{{item.id}}">
            <div class="card-img">
                <img src="https://blog.rocketseat.com.br/content/images/{{item.id_img}}jpg" alt="Imagem de {{item.title}}">
            </div>
            {% if item.isfeatured %}
                <div class="featured">
                    <p>Destaque</p>
                </div>
                {% endif %}
            <div class="card-info">
                <h4>{{item.title}}</h4>
                <p>Autor: {{item.autor}}</p>
                <p>{{item.duration}}</p>
            </div>
        </div>
        {% endfor %}

    </section>
    <div class="modal-overlay">
        <div class="modal">
            <a class="modal-close">
                <i class="material-icons">close</i>
            </a>
            <a class="maximize">
                <i class="material-icons">open_in_full</i>
            </a>
            <a class="minimize">
                <i class="material-icons">close_fullscreen</i>
            </a>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>


    <script src="/script.js"></script>

{% endblock %}