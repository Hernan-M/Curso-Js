{% extends "layout.njk" %}

{% block content %}
<div class="container-about">
    <div class="title">
        <h2>Sobre Foodfy</h2>
    </div>
    {% for text in texts %}
    <div class="text-about">
        <div class="title">
            <h3>{{text.idAbout}}</h3>
        </div>
        <div class="simple-text">
            {% if text.isbigger %}
                <p>{{text.textAbout1}}</p>
                <p>{{text.textAbout2}}</p>
            {% else %}
                <p>{{text.textAbout}}</p>
            {% endif %}
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}